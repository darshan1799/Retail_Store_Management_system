<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View-Customer-Details</title>
    <link rel="icon" href="Retail Store Management System.png" type="image/png">
   <link rel="stylesheet" href="viewtask.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
    <%- include('common/common')%>
        <h2>
            <%=detail.storename%>
        </h2>
        <table cellspacing="0.8">
            <thead>
            <th>Id</th>
            <th>Customer-Name</th>
            <th>E-mail</th>
            <th>Product-Name</th>
            <th>Purchase-Date</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Payment Mode</th>
            <th>Total</th>
            <th>Delete</th>
        </thead>
            <%let data=detail.data%>
           
                <%if(detail.data[0].errors == "No-Data Found!ðŸ”" ){%>
                    <tr>
                        <td colspan="10">
                            <%=data[0].errors%>
                        </td>
                    </tr>

                    <%}else{%>
                        <%var total=0%>
                            <%var len=detail.data.length%>
                                <%data.forEach((el)=> {%>
                                    <tr>
                                        <%for(let i in el){%>

                                              <%if(i == "button"){%>
                                                <td><i class="fa-solid fa-trash" type="button" id=<%=el[i]%>></i></td>
                                                <%}else{%>
                                            <td data-label=<%=i%>:>
                                                <%= el[i]%>
                                            </td>

                                            <%}}%>
                                           
                                           

                                    </tr>
                                    <%})}%>
                                        <%for(let j=0;j<len;j++){ total +=parseInt(data[j].total); }%>
                                            <tr id="total">
                                                <td colspan="8">Total-Income:-</td>
                                                <td>
                                                    <%=total || 0%>
                                                </td>
                                            </tr>

        </table>
        <script>
        let buttons = document.querySelectorAll(".fa-trash");
        let body = document.querySelector("body");
        buttons.forEach(function (el) {
       

            el.addEventListener("click", async function() {
                let res = confirm("Are You Sure For Delete This RecordðŸ˜Š??");
               if(res)
               { 
                 let k = this.getAttribute("id");
                 let form = document.createElement("form");
                 form.method = 'post';
                 form.action = '/dcustomer';
                 let inp = document.createElement("input");
                 form.setAttribute("display","none");
                 inp.name = "data";
                 inp.value = k;
                 form.appendChild(inp);
                 form.hidden = "true";
                 document.body.appendChild(form);
                 form.submit();
               }
            });
        });
    </script>
</body>

</html>